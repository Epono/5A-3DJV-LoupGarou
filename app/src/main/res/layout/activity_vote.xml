<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/vote_vote_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="VOTE TIME !"
        android:textSize="30dp" />

    <android.support.v7.widget.ListViewCompat
        android:id="@+id/vote_players_list_view"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:layout_below="@id/vote_vote_time"
        android:layout_marginTop="10dp" />

    <Button
        android:id="@+id/vote_confirm_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/vote_players_list_view"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="@string/vote_confirm_button_text"
        android:enabled="false"/>

</RelativeLayout>